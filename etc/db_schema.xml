<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="paymentvnpay" resource="checkout" engine="innodb" comment="Tích hợp VNPAY">
        <column xsi:type="int" name="order_id" unsigned="true" nullable="false" identity="true" comment="Mã giao dịch"/>
        <column xsi:type="varchar" name="order_desc" nullable="false" comment="Miêu tả giao dịch"/>
        <column xsi:type="varchar" name="order_type" nullable="false" comment="Loại giao dịch"/>
        <column xsi:type="float" name="amount" unsigned="true" nullable="false" comment="Số tiền"/>
        <column xsi:type="varchar" name="bank_code" nullable="false" comment="Mã ngân hàng"/>
        <column xsi:type="varchar" name="vpn_response_code" nullable="false" comment="Mã phản hồi"/>
        <column xsi:type="varchar" name="vpn_code" nullable="false" comment="Mã giao dịch VNPAY"/>
        <column xsi:type="datetime" name="create_at" nullable="false" on_update="true" comment="Thời gian giao dịch"/>
        <column xsi:type="varchar" name="customer" nullable="false" comment="Thành viên giao dịch"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="order_id"/>
        </constraint>
        <index referenceId="PAYMENTVNPAY_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
    </table>
</schema>
